{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "es2017"
    ],
    "allowJs": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "**/tmp/",
    "**/dist/"
  ]
}